<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calculateur TAR Suisse - odeal.ch</title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }
        
        .container {
            max-width: 800px;
            margin: 0 auto;
        }
        
        .header {
            text-align: center;
            color: white;
            margin-bottom: 30px;
        }
        
        .header h1 {
            font-size: 2.5em;
            margin-bottom: 10px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.2);
        }
        
        .header p {
            font-size: 1.1em;
            opacity: 0.9;
        }
        
        .card {
            background: white;
            border-radius: 20px;
            padding: 40px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
            margin-bottom: 20px;
        }
        
        .form-group {
            margin-bottom: 25px;
        }
        
        .form-group label {
            display: block;
            font-weight: 600;
            margin-bottom: 8px;
            color: #333;
            font-size: 0.95em;
        }
        
        .form-group input {
            width: 100%;
            padding: 12px 15px;
            border: 2px solid #e0e0e0;
            border-radius: 10px;
            font-size: 1em;
            transition: all 0.3s;
        }
        
        .form-group input:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }
        
        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
        }
        
        .btn {
            width: 100%;
            padding: 15px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 10px;
            font-size: 1.1em;
            font-weight: 600;
            cursor: pointer;
            transition: transform 0.2s, box-shadow 0.2s;
        }
        
        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(102, 126, 234, 0.3);
        }
        
        .btn:active {
            transform: translateY(0);
        }
        
        .btn:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            transform: none;
        }
        
        .loading {
            display: none;
            text-align: center;
            padding: 20px;
            color: #667eea;
        }
        
        .spinner {
            border: 3px solid #f3f3f3;
            border-top: 3px solid #667eea;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            animation: spin 1s linear infinite;
            margin: 0 auto 10px;
        }
        
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        
        .result {
            display: none;
            margin-top: 20px;
        }
        
        .result-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px;
            background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
            color: white;
            border-radius: 15px 15px 0 0;
        }
        
        .result-body {
            padding: 25px;
            background: #f8f9fa;
            border-radius: 0 0 15px 15px;
        }
        
        .result-item {
            display: flex;
            justify-content: space-between;
            padding: 12px 0;
            border-bottom: 1px solid #e0e0e0;
        }
        
        .result-item:last-child {
            border-bottom: none;
        }
        
        .result-label {
            font-weight: 600;
            color: #555;
        }
        
        .result-value {
            color: #333;
            font-weight: 500;
        }
        
        .tar-amount {
            font-size: 2em;
            font-weight: 700;
            color: white;
        }
        
        .confidence {
            display: inline-block;
            padding: 5px 15px;
            border-radius: 20px;
            font-size: 0.9em;
            font-weight: 600;
        }
        
        .confidence-high {
            background: #38ef7d;
            color: #0a5f3a;
        }
        
        .confidence-medium {
            background: #ffd93d;
            color: #8b6914;
        }
        
        .confidence-low {
            background: #ff6b6b;
            color: white;
        }
        
        .error {
            display: none;
            padding: 20px;
            background: #ff6b6b;
            color: white;
            border-radius: 15px;
            margin-top: 20px;
        }
        
        .info-box {
            background: #e3f2fd;
            padding: 15px;
            border-radius: 10px;
            margin-bottom: 20px;
            border-left: 4px solid #2196F3;
        }
        
        .info-box p {
            color: #1565c0;
            font-size: 0.9em;
            line-height: 1.5;
        }
        
        @media (max-width: 600px) {
            .form-row {
                grid-template-columns: 1fr;
            }
            
            .header h1 {
                font-size: 1.8em;
            }
            
            .card {
                padding: 20px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>üá®üá≠ Calculateur TAR Suisse</h1>
            <p>Calculez automatiquement les taxes de recyclage (SWICO ‚Ä¢ SENS ‚Ä¢ INOBAT)</p>
        </div>
        
        <div class="card">
            <div class="info-box">
                <p>üí° <strong>Astuce :</strong> Plus vous fournissez d'informations (EAN + description + marque), plus le calcul sera pr√©cis !</p>
            </div>
            
            <form id="tarForm">
                <div class="form-group">
                    <label for="ean">Code EAN (optionnel)</label>
                    <input type="text" id="ean" placeholder="Ex: 0195949591440">
                </div>
                
                <div class="form-group">
                    <label for="description">Description du produit</label>
                    <input type="text" id="description" placeholder="Ex: Apple iMac 24 pouces" required>
                </div>
                
                <div class="form-row">
                    <div class="form-group">
                        <label for="marque">Marque (optionnel)</label>
                        <input type="text" id="marque" placeholder="Ex: Apple">
                    </div>
                    
                    <div class="form-group">
                        <label for="poids">Poids en kg (optionnel)</label>
                        <input type="number" id="poids" step="0.01" placeholder="Ex: 4.5">
                    </div>
                </div>
                
                <button type="submit" class="btn" id="submitBtn">
                    üîç Calculer la TAR
                </button>
            </form>
            
            <div class="loading" id="loading">
                <div class="spinner"></div>
                <p>Analyse du produit en cours...</p>
            </div>
            
            <div class="error" id="error"></div>
            
            <div class="result" id="result">
                <div class="result-header">
                    <div>
                        <div style="font-size: 0.9em; opacity: 0.9;">Montant TAR TTC</div>
                        <div class="tar-amount" id="tarAmount">-</div>
                    </div>
                    <div style="text-align: right;">
                        <div style="font-size: 0.9em; opacity: 0.9;">Organisme</div>
                        <div style="font-size: 1.5em; font-weight: 700;" id="organisme">-</div>
                    </div>
                </div>
                
                <div class="result-body">
                    <div class="result-item">
                        <span class="result-label">üì¶ Produit</span>
                        <span class="result-value" id="productName">-</span>
                    </div>
                    
                    <div class="result-item">
                        <span class="result-label">üè∑Ô∏è Marque</span>
                        <span class="result-value" id="productBrand">-</span>
                    </div>
                    
                    <div class="result-item">
                        <span class="result-label">‚öñÔ∏è Poids</span>
                        <span class="result-value" id="productWeight">-</span>
                    </div>
                    
                    <div class="result-item">
                        <span class="result-label">üìã Type</span>
                        <span class="result-value" id="tarType">-</span>
                    </div>
                    
                    <div class="result-item">
                        <span class="result-label">üí∞ TAR Hors Taxe</span>
                        <span class="result-value" id="tarHT">-</span>
                    </div>
                    
                    <div class="result-item">
                        <span class="result-label">üí≥ TVA (8.1%)</span>
                        <span class="result-value" id="tva">-</span>
                    </div>
                    
                    <div class="result-item">
                        <span class="result-label">üéØ Confiance IA</span>
                        <span class="result-value">
                            <span class="confidence" id="confidence">-</span>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <script>
        const form = document.getElementById('tarForm');
        const loading = document.getElementById('loading');
        const result = document.getElementById('result');
        const error = document.getElementById('error');
        const submitBtn = document.getElementById('submitBtn');
        
        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            
            loading.style.display = 'block';
            result.style.display = 'none';
            error.style.display = 'none';
            submitBtn.disabled = true;
            
            const data = {
                ean: document.getElementById('ean').value.trim() || undefined,
                description: document.getElementById('description').value.trim(),
                marque: document.getElementById('marque').value.trim() || undefined,
                poids: document.getElementById('poids').value || undefined
            };
            
            try {
                const response = await fetch('/api/calculate-tar', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                });
                
                const json = await response.json();
                
                if (!response.ok || !json.success) {
                    throw new Error(json.error || 'Erreur lors du calcul');
                }
                
                document.getElementById('tarAmount').textContent = `CHF ${json.tar.tarifTTC}`;
                document.getElementById('organisme').textContent = json.tar.organisme;
                document.getElementById('productName').textContent = json.product.nom;
                document.getElementById('productBrand').textContent = json.product.marque || 'Inconnue';
                document.getElementById('productWeight').textContent = json.product.poids ? `${json.product.poids} kg` : 'Non sp√©cifi√©';
                document.getElementById('tarType').textContent = json.tar.type;
                document.getElementById('tarHT').textContent = `CHF ${json.tar.tarifHT}`;
                document.getElementById('tva').textContent = `${json.tar.tva}%`;
                
                const confidence = document.getElementById('confidence');
                confidence.textContent = `${json.confidence}%`;
                confidence.className = 'confidence';
                if (json.confidence >= 85) {
                    confidence.classList.add('confidence-high');
                } else if (json.confidence >= 70) {
                    confidence.classList.add('confidence-medium');
                } else {
                    confidence.classList.add('confidence-low');
                }
                
                result.style.display = 'block';
                
            } catch (err) {
                error.textContent = `‚ùå ${err.message}`;
                error.style.display = 'block';
            } finally {
                loading.style.display = 'none';
                submitBtn.disabled = false;
            }
        });
    </script>
</body>
</html>
